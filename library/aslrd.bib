}

@ARTICLE{2025arXiv250603244P,
    author = {{Pacucci}, Fabio and {Loeb}, Abraham},
    title = {{Cosmic Outliers: Low-Spin Halos Explain the Abundance, Compactness, and Redshift Evolution of the Little Red Dots}},
