    author = {{Casey}, Caitlin M. and {Akins}, Hollis B. and {Finkelstein}, Steven L. and {Franco}, Maximilien and {Fujimoto}, Seiji and {Liu}, Daizhong and {Long}, Arianna S. and {Magdis}, Georgios and {Manning}, Sinclaire M. and {McKinney}, Jed and {Shuntov}, Marko and {Tanaka}, Takumi S.},
    title = {{An upper limit of 10$^6$ M$\_\odot$ in dust from ALMA observations in 60 Little Red Dots}},
