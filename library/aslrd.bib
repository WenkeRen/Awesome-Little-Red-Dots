    title = {{The Rise of Faint, Red AGN at $z>4$: A Sample of Little Red Dots in the JWST Extragalactic Legacy Fields}},
    journal = {arXiv e-prints},
    keywords = {Astrophysics - Astrophysics of Galaxies},
    year = {2024},
