@ARTICLE{2025arXiv250218310C,
    author = {{Cooper}, Ryan A. and {Caputi}, Karina I. and {Iani}, Edoardo and {Rinaldi}, Pierluigi and {Desprez}, Guillaume and {Navarro-Carrera}, Rafael},
    title = {{High-velocity outflows in [OIII] emitters at z=2.5-9 from JWST NIRSpec medium-resolution spectroscopy}},
