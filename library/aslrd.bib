    lrdKeys = {black hole mass, early universe, jwst, photometry, sed}
}

@ARTICLE{2025ApJ...985..119Z,
    author = {{Zhang}, Zijian and {Jiang}, Linhua and {Liu}, Weiyang and {Ho}, Luis C.},
