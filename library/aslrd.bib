}

@ARTICLE{2025ApJ...984..144T,
    author = {{Tiede}, Christopher and {Zrake}, Jonathan and {MacFadyen}, Andrew and {Haiman}, Zolt{\'a}n},
    title = {{Suppressed Accretion onto Massive Black Hole Binaries Surrounded by Thin Disks}},
