@ARTICLE{2025MNRAS.539.1562W,
    author = {{Wang}, Ben and {Hennawi}, Joseph F. and {Cai}, Zheng and {Richards}, Gordon T. and {Schindler}, Jan-Torge and {Zakamska}, Nadia L. and {Ishikawa}, Yuzo and {Akins}, Hollis B. and {Sun}, Zechang},
    title = {{Luminous mid-IR-selected type 2 quasars at cosmic noon in SDSS Stripe 82 {\textendash} I. Selection, composite photometry, and spectral energy distributions}},
