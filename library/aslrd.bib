    author = {{Durodola}, Emmanuel and {Pacucci}, Fabio and {Hickox}, Ryan C.},
    title = {{Exploring the Active Galactic Nucleus Fraction of a Sample of JWST's Little Red Dots at 4 < z < 8: Overmassive Black Holes Are Strongly Favored}},
    journal = {\apj},
    keywords = {Active galaxies, Supermassive black holes, Galaxy evolution, High-redshift galaxies, Scaling relations, 17, 1663, 594, 734, 2031},
