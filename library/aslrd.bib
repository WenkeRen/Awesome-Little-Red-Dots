@ARTICLE{2024arXiv241102729Z,
    author = {{Zhang}, Zijian and {Jiang}, Linhua and {Liu}, Weiyang and {Ho}, Luis C.},
    title = {{Analysis of Multi-epoch JWST Images of $\sim 300$ Little Red Dots: Tentative Detection of Variability in a Minority of Sources}},
