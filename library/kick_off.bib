    journal = {\apjl},
    keywords = {Active galactic nuclei, James Webb Space Telescope, X-ray active galactic nuclei, Supermassive black holes, 16, 2291, 2035, 1663, Astrophysics - Astrophysics of Galaxies, Astrophysics - High Energy Astrophysical Phenomena},
