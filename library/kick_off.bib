    title = {{A Candidate Supermassive Black Hole in a Gravitationally Lensed Galaxy at Z {\ensuremath{\approx}} 10}},
    journal = {\apjl},
    keywords = {High-redshift galaxies, X-ray active galactic nuclei, Gravitational lensing, Supermassive black holes, Galaxy clusters, 734, 2035, 670, 1663, 584, Astrophysics - Astrophysics of Galaxies, Astrophysics - High Energy Astrophysical Phenomena},
    year = {2024},
